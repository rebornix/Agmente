{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Agent Client Protocol",
  "description": "The Agent Client Protocol (ACP) is a protocol that standardizes communication between code editors.",
  "colors": {
    "primary": "#0084d1",
